# use CRLF on windows
*       text=auto

*.c     text
*.cpp   text
*.h     text
*.hpp   text

*.ino   text
*.ini   text

*.json  text
*.py    text

*.sh    text eol=lf
*.bat   text eol=crlf

# VSCode shenanigans
.vscode/extensions.json text eol=lf
.vscode/settings.json   text eol=lf

*.png   binary
*.jpg   binary
*.jpeg  binary
*.pdf   binary
